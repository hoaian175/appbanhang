<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:src="@drawable/hotnew"
            android:layout_gravity="top|right"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/imageviewhinhanhsanpham"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:text="Tên sản phẩm"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#5F965F"
                android:id="@+id/textviewtensanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#EC4437"
                android:id="@+id/textviewgiasanpham"
                android:gravity="center"
                android:textSize="17dp"
                android:text="Giá: 29.000.000 VND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>
</LinearLayout>